{
  "name": "your-site",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "client-old",
    "server",
    "web"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "start:server": "turbo run dev --filter=@your-site/server",
    "start:client-old": "turbo run dev --filter=@your-site/client-old",
    "start:web": "turbo run dev --filter=@your-site/web",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  }
}
